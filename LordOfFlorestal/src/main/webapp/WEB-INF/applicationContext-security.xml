<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/security
                http://www.springframework.org/schema/security/spring-security.xsd">
    <http auto-config="true">
        <intercept-url pattern="/adm/**" access="ROLE_LORD" />
        <intercept-url pattern="/jogador/**" access="ROLE_LORD, ROLE_ALUNO" />
        <form-login login-page="/login.xhtml" always-use-default-target="true" default-target-url="/jogador/index.xhtml" authentication-failure-url="/login.xhtml?login_error=1" />
        <logout />
        <remember-me />
    </http>
    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="LordOfFlorestal" authorities-by-username-query="SELECT j.login, t.descricao FROM Jogador j, TipoJogador t WHERE j.tipo_jogador = t.id_tipo_jogador AND j.login = ?" users-by-username-query="SELECT login, senha, true FROM Jogador WHERE login = ?" />
        </authentication-provider>
    </authentication-manager>
</beans:beans>